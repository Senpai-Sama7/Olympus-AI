# ============================================
# Local-First Agentic Assistant Configuration
# ============================================

# Core Application Settings
APP_SECRET=your-super-secret-key-change-this-in-production
APP_ENV=development
APP_PORT=8000
APP_HOST=0.0.0.0

# Authentication
ADMIN_PASSPHRASE=change-this-admin-passphrase
SESSION_SECRET=your-session-secret-key
SESSION_LIFETIME_HOURS=168

# Database
DATABASE_PATH=./data/app.db
VECTOR_EXTENSION=sqlite-vec  # or sqlite-vector

# LLM Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=phi
LLM_DEFAULT_PROVIDER=ollama  # ollama, openai, anthropic, gemini

# Cloud LLM API Keys (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Budget Management
DAILY_TOKEN_BUDGET=10000
DAILY_TIME_BUDGET_SEC=3600
PER_TASK_TOKEN_LIMIT=1000
PER_TASK_TIME_LIMIT_SEC=300

# Security & Permissions
ALLOW_WRITE_DIRS=/workspace/data/user_files,/tmp/agent_workspace
ALLOW_WEB_DOMAINS=example.com,github.com,stackoverflow.com
MAX_FILE_SIZE_MB=50
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW_MINUTES=15

# Code Interpreter
CODE_INTERPRETER_TIMEOUT_SEC=30
CODE_INTERPRETER_MAX_ITERATIONS=5
CODE_INTERPRETER_CPU_LIMIT=0.5
CODE_INTERPRETER_MEM_LIMIT=512m
CODE_INTERPRETER_SANDBOX_ROOT=/sandbox/workspace

# Web Automation
PLAYWRIGHT_TIMEOUT_SEC=30
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SCREENSHOT_PATH=/workspace/data/screenshots
PLAYWRIGHT_MAX_RETRIES=3
PLAYWRIGHT_RETRY_DELAY_SEC=2

# Memory & Search
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32
SEARCH_TOP_K=10
SEARCH_MMR_LAMBDA=0.5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Observability
LOG_LEVEL=info
LOG_FILE_PATH=./data/logs/app.log
METRICS_ENABLED=true
METRICS_EXPORT_INTERVAL_SEC=60

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_QUEUE_NAME=agent_tasks
WORKER_HEARTBEAT_SEC=30

# Desktop App (if using Electron/Tauri)
DESKTOP_AUTO_UPDATE=true
DESKTOP_TRAY_ENABLED=true
DESKTOP_START_MINIMIZED=false

# Development Settings
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_CORS_ORIGIN=http://localhost:3000

# Feature Flags
FEATURE_CODE_INTERPRETER=true
FEATURE_WEB_AUTOMATION=true
FEATURE_FLOW_BUILDER=true
FEATURE_CLOUD_LLM_FALLBACK=true

# Audit & Compliance
AUDIT_LOG_PATH=./data/audit/audit.db
AUDIT_RETENTION_DAYS=90
AUDIT_SENSITIVE_ACTIONS=true

# Redis (optional cache)
REDIS_URL=redis://localhost:6379
REDIS_TTL_SEC=3600

# External Service Keys (optional)
GITHUB_TOKEN=
GOOGLE_SHEETS_CREDENTIALS_PATH=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=agent@localhost

# Existing service compatibility (will be migrated)
MONGODB_URI=mongodb://admin:admin123@mongodb:27017/enterprise-app?authSource=admin
JWT_SECRET=deprecated-will-be-removed
POSTGRES_DSN=postgresql://postgres:postgres@postgres:5432/cognitive
TEMPORAL_ADDRESS=temporal:7233